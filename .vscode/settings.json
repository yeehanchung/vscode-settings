{
    /* Visuals */
    "workbench.iconTheme": "file-icons",
    "workbench.colorTheme": "Default Dark+",
    "workbench.reduceMotion": "on",
    "workbench.layoutControl.enabled": false,
    "workbench.sideBar.location": "left",
    "workbench.list.smoothScrolling": true,
    "workbench.fontAliasing": "antialiased",
    "workbench.tree.indent": 10,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tree.expandMode": "singleClick",
    "workbench.tree.renderIndentGuides": "always",
    /* Window */
    "window.dialogStyle": "custom",
    "window.nativeTabs": true, // this is great, macOS only
    "window.titleBarStyle": "custom",
    "window.zoomLevel": -1,
    /* TypeScript */
    "typescript.suggest.includeAutomaticOptionalChainCompletions": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.showUnused": true
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.showUnused": true
    },
    /* Json */
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    /* JavaScript */
    "javascript.format.semicolons": "remove",
    "javascript.updateImportsOnFileMove.enabled": "always",
    /* Docusaurus */
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    /* Markdown */
    "markdown.extension.tableFormatter.normalizeIndentation": true,
    "markdown.extension.toc.updateOnSave": true,
    "[markdown]": {
        "editor.quickSuggestions": {
            "other": "on",
            "comments": "inline",
            "strings": "inline",
        }
    },
    /* Editor */
    "editor.fontFamily": "Input Mono, Fira Code, monospace",
    "editor.fontSize": 14,
    "editor.lineHeight": 20,
    "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss06', 'zero'",
    "editor.inlayHints.enabled": "off",
    "editor.wrappingIndent": "indent",
    "editor.accessibilitySupport": "off",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.find.addExtraSpaceOnTop": false,
    "editor.guides.bracketPairs": "active",
    "editor.inlineSuggest.enabled": true,
    "editor.lineNumbers": "interval",
    // "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderWhitespace": "boundary",
    "editor.suggestSelection": "first",
    "editor.tabSize": 4,
    "editor.suggestFontSize": 13,
    "editor.tabCompletion": "off",
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.stickyScroll.enabled": true,
    "editor.hover.sticky": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": false,
        "source.fixAll.eslint": true, // this allows ESLint to auto fix on save
        "source.organizeImports": false
    },
    "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
    "explorer.confirmDragAndDrop": false,
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 5,
    /* Emmet */
    "emmet.showSuggestionsAsSnippets": true,
    "emmet.triggerExpansionOnTab": false,
    "emmet.showExpandedAbbreviation": "never",
    "emmet.optimizeStylesheetParsing": false,
    /* Extensions */
    "extensions.autoUpdate": "onlyEnabledExtensions",
    "extensions.ignoreRecommendations": true,
    /* Files */
    "files.exclude": {
        "**/.classpath": true,
        "**/.factorypath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/*.class": true
    },
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.simpleDialog.enable": true,
    /* Terminal */
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontWeight": "300",
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.tabs.enabled": true,
    "scm.diffDecorationsGutterWidth": 2,
    "debug.onTaskErrors": "debugAnyway",
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderIndicators": false,
    "search.exclude": {
        "**/.git": true,
        "**/.github": true,
        "**/.nuxt": true,
        "**/.output": true,
        "**/.pnpm": true,
        "**/.vscode": true,
        "**/.yarn": true,
        "**/bower_components": true,
        "**/dist/**": true,
        "**/logs": true,
        "**/node_modules": true,
        "**/out/**": true,
        "**/package-lock.json": true,
        "**/pnpm-lock.yaml": true,
        "**/tmp": true,
        "**/yarn.lock": true
    },
    /* Extension configs */
    "errorLens.excludeBySource": [
        "cSpell",
        "Grammarly",
        "eslint"
    ],
    "errorLens.enabledDiagnosticLevels": [
        "warning",
        "error"
    ],
    /* ESLint config: https://github.com/antfu/eslint-config */
    "eslint.codeAction.showDocumentation": {
        "enable": true
    },
    "eslint.quiet": false,
    "eslint.validate": [
        "javascript",
        "typescript",
        "javascriptreact",
        "typescriptreact",
        "vue",
        "html",
        "markdown",
        "json",
        "jsonc",
        "json5"
    ],
    "css.lint.hexColorLength": "ignore",
    "github.copilot.enable": {
        "*": true,
        "markdown": true,
        "plaintext": false,
        "yaml": false
    },
    /* Git */
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.untrackedChanges": "separate",
    /* GitHub */
    "githubIssues.workingIssueFormatScm": "#${issueNumberLabel}",
    "githubPullRequests.fileListLayout": "tree",
    "githubPullRequests.pullBranch": "never",
    /* Gitlens */
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.menus": {
        "editor": {
            "blame": false,
            "clipboard": true,
            "compare": true,
            "history": false,
            "remote": false
        },
        "editorGroup": {
            "blame": true,
            "compare": false
        },
        "editorTab": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "explorer": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "scm": {
            "authors": true
        },
        "scmGroup": {
            "compare": true,
            "openClose": true,
            "stash": true
        },
        "scmGroupInline": {
            "stash": true
        },
        "scmItem": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": false,
            "stash": true
        }
    },
    /* Prettier - Only for manual formatting */
    "prettier.enable": false,
    "prettier.printWidth": 200,
    "prettier.semi": false,
    "prettier.singleQuote": true,
    /**
     * Color customizations which you can ignore
     * https://coolors.co
     */
    "workbench.colorCustomizations": {
        "tree.indentGuidesStroke": "#2ecb6f",
        "terminalCursor.foreground": "#2ecb6f",
        "terminal.foreground": "#A5A2A2",
        "terminalCursor.background": "#A5A2A2",
        "terminal.ansiBrightBlack": "#5C5855",
        "terminal.ansiBrightBlue": "#01A0E4",
        "terminal.ansiBrightCyan": "#B5E4F4",
        "terminal.ansiBrightGreen": "#01A252",
        "terminal.ansiBrightMagenta": "#A16A94",
        "terminal.ansiBrightRed": "#DB2D20",
        "terminal.ansiBrightWhite": "#F7F7F7",
        "terminal.ansiBrightYellow": "#FDED02",
        "terminal.ansiCyan": "#B5E4F4",
        "terminal.ansiGreen": "#01A252",
        "terminal.ansiMagenta": "#A16A94",
        "terminal.ansiRed": "#DB2D20",
        "terminal.ansiWhite": "#A5A2A2",
        "terminal.ansiYellow": "#FDED02",
        "terminal.ansiBlue": "#ADADAD",
        "terminal.ansiBlack": "#424242",
        "terminal.background": "#121212",
        "[Default Light+]": {
            "sideBar.background": "#F5F5F5",
            "tab.inactiveBackground": "#F5F5F5",
            "editor.background": "#F5F5F5",
            "tab.activeBackground": "#FFFDE4",
        },
        "[Default Dark+]": {
            // "editor.background": "#2b2b2b",
            "editor.foreground": "#fafafa",
            "tab.activeBackground": "#000001",
            "editorLineNumber.foreground": "#7c8083",
            "editor.wordHighlightStrongBorder": "#DB2D20",
            "editor.findMatchHighlightBorder": "#DB2D20",
            "editor.findMatchBorder": "#DB2D20",
            "editor.findRangeHighlightBorder": "#DB2D20",
            // "editor.lineHighlightBorder": "#DB2D20",
            "editor.symbolHighlightBorder": "#DB2D20",
            "editor.wordHighlightBorder": "#DB2D20",
            "editor.selectionHighlightBorder": "#DB2D20",
            "editor.rangeHighlightBorder": "#DB2D20"
        }
    },
    /**
     * Color customizations which you can ignore
     * https://coolors.co
     */
    "editor.tokenColorCustomizations": {
        "[Default Dark+]": {
            "textMateRules": [
                {
                    "scope": "keyword.operator",
                    "settings": {
                        "foreground": "#f47446"
                    }
                },
                {
                    "scope": "comment.block",
                    "settings": {
                        "fontStyle": "",
                        "foreground": "#699f50"
                    }
                },
                {
                    "scope": "string",
                    "settings": {
                        "foreground": "#F8B195",
                    }
                },
                {
                    "scope": "support.type.property-name",
                    "settings": {
                        "foreground": "#9DC7C8",
                    }
                },
            ]
        }
    },
}
